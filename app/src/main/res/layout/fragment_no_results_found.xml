<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NoResultsFoundFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/no_results_found_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/no_results_found_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="266dp"
                android:layout_marginBottom="17dp"
                android:text=""
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/no_results_found_imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/no_results_found_imageView"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_marginBottom="56dp"
                android:rotation="270"
                app:layout_constraintBottom_toTopOf="@+id/no_results_found_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/no_results_found_textView"
                app:srcCompat="@drawable/search_not_found" />

            <Button
                android:id="@+id/no_results_found_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="212dp"
                android:text="Rent a Property Now"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/no_results_found_imageView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</FrameLayout>