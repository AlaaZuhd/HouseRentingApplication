<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3F1F1"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/home_property_scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--            <ImageView-->
            <!--                android:id="@+id/home_property_imageView"-->
            <!--                android:layout_width="300dp"-->
            <!--                android:layout_height="200dp"-->
            <!--                android:layout_gravity="center" />-->

            <!--            <com.smarteist.autoimageslider.SliderView-->
            <!--                android:id="@+id/imageslider"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="300dp"-->
            <!--                app:sliderAnimationDuration="600"-->
            <!--                app:sliderAutoCycleDirection="back_and_forth"-->
            <!--                app:sliderAutoCycleEnabled="true"-->
            <!--                app:sliderIndicatorAnimationDuration="600"-->
            <!--                app:sliderIndicatorGravity="center_horizontal|bottom"-->
            <!--                app:sliderIndicatorMargin="15dp"-->
            <!--                app:sliderIndicatorOrientation="horizontal"-->
            <!--                app:sliderIndicatorPadding="3dp"-->
            <!--                app:sliderIndicatorRadius="2dp"-->
            <!--                app:sliderIndicatorUnselectedColor="#fff"-->
            <!--                app:sliderIndicatorSelectedColor="#5A5A5A"-->
            <!--                app:sliderScrollTimeInSec="2"-->
            <!--                app:sliderStartAutoCycle="true"/>-->

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imagesilder"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#fff"
                app:sliderScrollTimeInSec="2"
                app:sliderStartAutoCycle="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/home_property_city_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="City: "
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/home_property_city_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:text="Name"
                    android:textColor="#000000" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/home_property_number_of_bedrooms_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Number of Bedrooms:"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/home_property_number_of_bedrooms_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Number of bebrooms"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/home_property_postal_address_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Postal Address: "
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/home_property_postal_address_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Postal address as Number"
                    android:inputType="textPostalAddress"
                    android:padding="5dp"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/home_property_surface_area_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Surface Area: "
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/home_property_surface_area_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Float Number"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/home_property_construction_year_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Construction Year: "
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/home_property_construction_year_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Number"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/home_property_rental_price_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Rental Price: "
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/home_property_rental_price_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textColor="#000000" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/home_property_balcony_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Has a Balcony? "
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/home_property_balcony_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:enabled="false"
                    android:padding="5dp"
                    android:text="No"
                    android:textColor="#000000"
                    android:textColorHint="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/home_property_garden_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Has a Garden? "
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/home_property_garden_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:enabled="false"
                    android:padding="5dp"
                    android:text="No"
                    android:textColor="#000000"
                    android:textColorHint="#000000" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/home_property_status_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Property Status: "
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/home_property_status_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:enabled="false"
                    android:padding="5dp"
                    android:showText="false"
                    android:splitTrack="false"
                    android:text="UnFinished"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textOff="UnFinished"
                    android:textOn="Finished"
                    tools:checked="false" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_property_availability_date_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/home_property_availability_date_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Availability Date:"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/home_property_availability_date_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="YY-MM-DD"
                    android:inputType="textPersonName"
                    android:textColor="#000000" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/home_property_description_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Description: "
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/home_property_description_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:editable="false"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="start|top"
                    android:hint="Small paragraph to describe your property (up to 200 words)"
                    android:inputType="textMultiLine"
                    android:maxLines="7"
                    android:minLines="3"
                    android:padding="5dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/home_property_renting_agency_owner_id_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Owner Email Address: "
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/home_property_renting_agency_owner_id_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:text="Name"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_property_upload_images_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/home_property_upload_image_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Upload or edit Images for the property"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/home_property_upload_images_inner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


                <Button
                    android:id="@+id/home_property_upload_image_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Image"
                    app:icon="@drawable/ic_baseline_cloud_upload_24" />
            </LinearLayout>

            <Button
                android:id="@+id/home_property_delete_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Delete"
                android:visibility="gone"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/home_property_edit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Edit"
                android:visibility="gone"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/home_property_repost_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="RePost"
                android:visibility="gone"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/home_property_update_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Update"
                android:visibility="gone"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/home_property_apply_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Apply"
                app:cornerRadius="50dp" />


            <Button
                android:id="@+id/home_property_close_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Close"
                app:cornerRadius="50dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>